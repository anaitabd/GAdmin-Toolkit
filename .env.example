# Environment Variables Template
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=3000
BASE_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/emaildb
DB_POOL_MAX=20

# Authentication
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=24h

# Encryption (MUST be exactly 32 characters)
ENCRYPTION_KEY=your_32_character_encryption_key

# Tracking
TRACKING_BASE_URL=http://localhost:3000
TRACKING_SECRET=your_tracking_secret_here_change_in_production
TRACKING_BASE_DOMAIN=tracking.yourdomain.com

# Worker Configuration
WORKER_BATCH_SIZE=10
WORKER_DELAY_MS=1000
MAX_WORKER_RESTARTS=5
HEALTH_CHECK_INTERVAL_MS=30000

# Logging
LOG_LEVEL=info
LOG_DIR=logs
LOG_RETENTION_DAYS=90

# Rate Limiting
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Monitoring (Optional)
SENTRY_DSN=
PROMETHEUS_PORT=9090

# Email Configuration
SENDING_DOMAINS=yourdomain.com,mail1.yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_DEFAULT_REGION=us-east-1
AWS_SECURITY_GROUP_ID=sg-xxxxxxxxx
AWS_KEY_PAIR_NAME=your-keypair-name
AWS_KEY_PAIR_PATH=/path/to/your-keypair.pem
AWS_SSH_PRIVATE_KEY=

# AWS Route53
AWS_ROUTE53_HOSTED_ZONE_ID=Z1234567890ABC

# EC2 Configuration
EC2_INSTANCE_TYPE=t2.micro
