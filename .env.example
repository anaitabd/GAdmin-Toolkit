# Environment Variables Template
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/emaildb

# Authentication
JWT_SECRET=your_jwt_secret_here_change_in_production

# Gmail API
GMAIL_SERVICE_ACCOUNT_PATH=./main/api/cred.json

# Tracking
TRACKING_SECRET=your_tracking_secret_here_change_in_production

# SMTP Configuration (if using SMTP)
SMTP_POOL_MAX=5

# Worker Configuration
MAX_WORKERS=50
WORKER_RESTART_DELAY=5000
MAX_WORKER_RESTARTS=3

# Rate Limiting
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Monitoring (Optional)
SENTRY_DSN=
PROMETHEUS_PORT=9090

# Email Sending Domains
SENDING_DOMAINS=yourdomain.com,mail1.yourdomain.com,mail2.yourdomain.com

# Admin Email (for alerts)
ADMIN_EMAIL=admin@yourdomain.com
